<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        Title="WinTweaks" Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FF202030"
        FontFamily="Segoe UI"
        FontSize="14"
        Foreground="white">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <ComboBox Name="CategoryCombo" Width="220" FontSize="14" Margin="0,0,0,10"
                  Background="#FF3E3E42" Foreground="black"
                  BorderBrush="#FF3E3E42" BorderThickness="1"
                  HorizontalContentAlignment="Left">
            <ComboBox.ItemContainerStyle>
                <Style TargetType="ComboBoxItem">
                    <Setter Property="Foreground" Value="white"/>
                    <Setter Property="Background" Value="#FF3E3E42"/>
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#FF0066CC"/>
                            <Setter Property="Foreground" Value="white"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF0066CC"/>
                            <Setter Property="Foreground" Value="white"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ComboBox.ItemContainerStyle>
        </ComboBox>

        <ListBox Name="ListBox" Grid.Row="1" FontSize="14"
                 Background="#FF3E3E42" Foreground="white"
                 BorderBrush="#FF0A84FF" BorderThickness="1"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 SelectionMode="Extended"/>

        <Button Name="RunButton"
                Grid.Row="2"
                Content="Run Tweak"
                Width="120"
                Height="35"
                HorizontalAlignment="Right"
                Margin="0,10,0,0"
                Cursor="Hand">


            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#FF0A84FF"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="10,5"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF0066CC"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#FF0055AA"/>


                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>


        <ProgressBar Name="ProgressBar" Grid.Row="3" Height="25" Margin="0,10,0,0" 
                     Minimum="0" Maximum="100" Value="0"
                     Foreground="#FF0A84FF" Background="#FF3E3E42" BorderBrush="#FF0A84FF" BorderThickness="1"/> 

        <TextBlock Name="ProgressText" Grid.Row="4" Height="25" Margin="0,5,0,0"
                   Foreground="white" FontWeight="Normal" Text=""/>

<!-- UndoButton --> 
        <Button Name="UndoButton"
                Grid.Row="5"
                Content="Undo Tweak"
                Width="120"
                Height="35"
                HorizontalAlignment="Right"
                Margin="0,10,0,0"
                Cursor="Hand">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#FFCC3300"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="10,5"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FFAA2200"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#FF880000"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>


    </Grid>




</Window>

